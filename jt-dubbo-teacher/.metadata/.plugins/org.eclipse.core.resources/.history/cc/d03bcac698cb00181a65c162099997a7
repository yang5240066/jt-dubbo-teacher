<script type="text/javascript">
	var map = getParamMap();
	var itemId = map.get("itemId");
	console.log(itemId);
	var vue = new Vue({
		el : "#app",
		mounted:function(){
			var _vue = this;
			var url = "/api/getItemDetail.html?itemId="+itemId;
			axios.get(url).then(function(res){
				var result = res.data;
				_vue.item = result;
				console.log(result);
			}).catch(function(e){
				console.log(e);
			});
			
		},
		data : {item:null}
	});
</script>
