<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo 
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	<!-- 1,应用名称 -->
	<dubbo:application name="consumer" />
	<!-- 2,zookeeper -->
	<dubbo:registry address="zookeeper://192.168.88.136:2181">
	</dubbo:registry>
	<!-- 3,配置那些接口由dubbo来执行 check=false 网站启动时，不检查有没有提供者 -->
	<dubbo:reference timeout="90000" check="false"
		interface="com.jt.cart.service.CartService" id="cartService"></dubbo:reference>
	<dubbo:reference timeout="90000" check="false"
		interface="com.jt.order.service.OrderService" id="orderService"></dubbo:reference>
	<dubbo:reference timeout="90000" check="false"
		interface="com.jt.search.service.SearchService" id="searchService"></dubbo:reference>
</beans>










